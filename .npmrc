# Enable strict peer dependency resolution
strict-peer-dependencies=true

# Store lockfile only in the root of the workspace
shamefully-hoist=false

# Use the pnpm workspace for linking dependencies
link-workspace-packages=true

# Enable Node.js engine checks
engine-strict=true

# Use the latest version of pnpm for commands (optional)
prefer-frozen-lockfile=true

# Disable package-lock.json generation
package-lock=false

# Save exact versions for dependencies
save-exact=true

# Set the registry for npm packages
registry=https://registry.npmjs.org/
